@using VendorsOrders.Models;

@{
  Layout = "_Layout";
}

<h3>Vendors Index</h3>
@if (Vendor.AllVendors.Count == 0)
{
  <p>No vendors in system. Please use the link below to add a vendor.</p>
}
else
{
  <ul>
  @foreach (Vendor vendor in Vendor.AllVendors)
  {
    <li><a href="/vendors/@vendor.Id">@vendor.Name</a><form action="/vendors/@vendor.Id" method="post"><button type=submit>Delete</button></form></li>
  }
  </ul>
}
<a href="/vendors/new">Add a vendor</a>
<a href="/">Home</a>