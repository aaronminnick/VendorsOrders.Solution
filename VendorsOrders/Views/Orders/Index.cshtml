@using VendorsOrders.Models;

@{
  Layout = "_Layout";
}

<h3>Orders Index</h3>
@if (Order.AllOrders.Count == 0)
{
  <p>No orders in system. Please add orders through the individual vendor.</p>
  <a href="/vendors">Vendors index</a>
}
else
{
  <p>Select an order to view details.</p>
  <ul>
  @foreach (Order order in Order.AllOrders)
  {
    <li><a href="/vendors/@order.VendorId/orders/@order.Id">@order.Title </a>(for <a href="/vendors/@order.VendorId">@Vendor.Find(order.VendorId).Name</a>)</li>
  }
  </ul>
}
<a href="/">Home</a>
